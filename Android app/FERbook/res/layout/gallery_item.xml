<?xml version="1.0" encoding="utf-8"?>

<!-- Ovo je layout za item koji ce biti u fragment_galleries.
	 Sluzi za prikaz itema koji predstavlja album i sadrzi glavnu sliku album i
	 naziv albuma
	  -->

<FrameLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <!-- Da samo koristili ImageView onda bi tu umjesto tog retka
    	pisali smo ImageView -->
    <com.ferbook.SquareImageView
        android:id="@+id/picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
     />
    
    <TextView
        android:id="@+id/album_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_gravity="bottom"
        android:textColor="@android:color/white"
        android:background="#55000000"
        />

</FrameLayout>