<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/news_item_pimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:adjustViewBounds="true"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/news_item_ptext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/news_item_pimage"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="23dp"
        android:layout_toLeftOf="@+id/news_item_strelica"
        android:layout_toRightOf="@+id/news_item_pimage"
        android:clickable="true"
        android:gravity="right"
        android:text="TextView"
        android:textColor="@color/glavna_boja" />

    <TextView
        android:id="@+id/news_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/news_item_pimage"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/news_item_pimage"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:text="TextView" />

    <ImageView
        android:id="@+id/news_item_image"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/news_item_text"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/news_item_text"
        android:layout_marginRight="5dp"
        android:layout_marginTop="14dp"
        android:adjustViewBounds="true"
        android:maxHeight="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/news_item_likesnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/news_item_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="TextView"
        android:textSize="10sp" />

    <Button
        android:id="@+id/news_item_like"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/news_item_likesnum"
        android:layout_alignBottom="@+id/news_item_likesnum"
        android:layout_alignLeft="@+id/news_item_image"
        android:layout_marginBottom="20dp"
        android:text="    Like    " />

    <Button
        android:id="@+id/news_item_comment"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/news_item_likesnum"
        android:layout_alignBottom="@+id/news_item_likesnum"
        android:layout_alignRight="@+id/news_item_image"
        android:text="Comment" />

    <ImageView
        android:id="@+id/news_item_p2image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/news_item_text"
        android:layout_alignRight="@+id/news_item_text"
        android:adjustViewBounds="true"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/news_item_p2text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/news_item_ptext"
        android:layout_alignBottom="@+id/news_item_ptext"
        android:layout_toLeftOf="@+id/news_item_p2image"
        android:layout_toRightOf="@+id/news_item_strelica"
        android:clickable="true"
        android:text="TextView"
        android:textColor="@color/glavna_boja" />

    <TextView
        android:id="@+id/news_item_strelica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/news_item_p2text"
        android:layout_alignBottom="@+id/news_item_p2text"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:text="  >  " />

    <TextView
        android:id="@+id/news_item_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/news_item_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="TextView"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/news_item_like"
        android:layout_below="@+id/news_item_like"
        android:layout_marginTop="15dp" />

</RelativeLayout>
</LinearLayout>